{
    "id" : "hu.chatenium.chtnoladw",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "command" : "chateniumadw",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--env=LC_ALL=hu_HU.UTF-8",
    	"--env=LANG=hu_HU.UTF-8",
    	"--talk-name=org.freedesktop.secrets"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	  "name": "Python dependencies",
	  "buildsystem": "simple",
	  "build-commands": [
	    "pip3 install --prefix=/app keyring requests aiohttp git+https://github.com/chatenium/Chatenium-On-Linux-UniEnd "
	  ],
	  "cleanup": [
	    "*.pyc",
	    "*.pyo",
	    "__pycache__"
	  ]
	},
        {
            "name" : "chateniumadw",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/parallels/Projects"
                }
            ],
            "config-opts" : [
                "--libdir=lib"
            ]
        }
    ],
    "build-options": {
    "env": {
        "LC_ALL": "hu_HU.UTF-8",
        "LANG": "hu_HU.UTF-8"
    },
    "build-args": [
      "--share=network"
    ]
    }
}
